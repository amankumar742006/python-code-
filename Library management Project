class Book:
    def __init__(self, title, author, price_per_day):
        self.title = title
        self.author = author
        self.available = True
        self.price_per_day = price_per_day

    def __str__(self):
        return f"{self.title} by {self.author} - {'Available' if self.available else 'Issued'}"


class Library:
    def __init__(self):
        self.books = []

    def add_book(self, book):
        self.books.append(book)

    def show_books(self):
        for i, book in enumerate(self.books, 1):
            print(f"{i}. {book}")

    def rent_book(self, index, days):
        if 0 < index <= len(self.books):
            book = self.books[index - 1]
            if book.available:
                book.available = False
                cost = days * book.price_per_day
                print(f"You rented '{book.title}' for {days} days. Total cost: â‚¹{cost}")
            else:
                print("Sorry, book already issued.")
        else:
            print("Invalid choice.")


# Driver code
lib = Library()
lib.add_book(Book("Python Basics", "Guido", 10))
lib.add_book(Book("Data Science", "Jake", 15))
lib.add_book(Book("AI Fundamentals", "Andrew", 20))

while True:
    print("\nðŸ“š Library Menu")
    print("1. Show Books")
    print("2. Rent Book")
    print("3. Exit")
    choice = int(input("Enter choice: "))

    if choice == 1:
        lib.show_books()
    elif choice == 2:
        lib.show_books()
        num = int(input("Select book number: "))
        days = int(input("For how many days? "))
        lib.rent_book(num, days)
    elif choice == 3:
        print("Thank you for visiting!")
        break
    else:
        print("Invalid choice.")
